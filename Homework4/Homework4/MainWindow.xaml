<Window x:Class="Homework4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,181,0">
        <TextBox x:Name="uxZipcode" HorizontalAlignment="Left" Height="31" Margin="208,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TextChanged="EnableClick"/>
        <Label Content="Please enter a valid U.S. or Canadian zip code:" HorizontalAlignment="Left" Margin="208,87,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228" Margin="208,178,0,0"/>

    </Grid>
</Window>
